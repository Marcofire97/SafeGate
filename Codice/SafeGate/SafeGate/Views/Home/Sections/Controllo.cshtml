<h2 class="text-center mb-4">Elenco Controlli</h2>


<!-- Tabella dei Controllo -->
<table id="ControlsTable" class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Data Inizio</th>
            <th>Note</th>
            <th>Data Fine</th>
            <th>Dazio Doganale</th>
            <th>Id Controllio</th>
            <th>Id Passeggero</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<style>
    .modal-backdrop {
        display: contents !important;
    }

    .modal {
        overflow-y: visible;
        overflow: visible;
    }

    .modal-dialog {
        max-width: none;
        margin: auto;
        overflow-y: visible;
        overflow: visible;
    }

    .modal-body {
        max-height: none;
        overflow-y: visible;
        overflow: visible;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        // Funzione per caricare il DataTable
        function loadDataTableScript(callback) {
            var script = document.createElement('script');
            script.src = "https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js";
            script.onload = callback;
            document.head.appendChild(script);
        }

        // Carica DataTables e inizializza la tabella
        var dataTable;
        loadDataTableScript(function() {
            $.ajax({
                url: "/Home/GetControls",
                type: "GET",
                dataType: "json",
                success: function (response) {
                    if (response.success && response.data && Array.isArray(response.data) && response.data.length > 0) {
                        console.log("Dati ricevuti:", response.data);

                        dataTable = $('#ControlsTable').DataTable({
                            "paging": true,
                            "searching": true,
                            "info": true,
                            "ordering": true,
                            "data": response.data,
                                "columns": [
                                    { "data": "id_Controllo" },
                                    {
                                        "data": "data_Ora_Inizio",
                                        "render": function(data, type, row) {
                                            return formatDate(data);
                                        }
                                    },
                                    { "data": "note" },
                                    {
                                        "data": "data_Ora_Fine",
                                        "render": function(data, type, row) {
                                            return formatDate(data);
                                        }
                                    },
                                    {
                                        "data": "dazio_Doganale",
                                        "render": function(data, type, row) {
                                            return data ? data.toFixed(2) + " €" : "N/D";
                                        }
                                    },
                                    { "data": "id_Controllo" },
                                    { "data": "id_Passeggero" },
                            ],
                        });
                    } else {
                        console.error("Errore nel caricamento dei dati:", response.message || 'Dati non validi');
                    }
                },
                error: function () {
                    console.log("Errore nella richiesta AJAX.");
                }
            });
        });

        function formatDate(dateString) {
            var date = new Date(dateString);
            return date.toLocaleString();
        }
    });
</script>
