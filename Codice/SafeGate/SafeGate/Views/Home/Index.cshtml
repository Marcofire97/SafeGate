@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <link href="~/css/index.css" rel="stylesheet">
</head>
<body>
    <div id="sidebar" class="closed">
        <button class="sidebar-toggle-btn">
            <i class="bi bi-chevron-left"></i>
        </button>
        <a href="#" class="sidebar-item" section="home">
            <i class="bi bi-house-door-fill"></i>
            <span class="section-name">Home</span>
        </a>
        <a href="#" class="sidebar-item" section="Funzionario">
            <i class="bi bi-person-workspace"></i>
            <span class="section-name">Funzionari</span>
        </a>
        <a href="#" class="sidebar-item" section="PuntoControllo">
            <i class="bi bi-signpost-split"></i>
            <span class="section-name">Punti di controllo</span>
        </a>
        <a href="#" class="sidebar-item" section="Addetto">
            <i class="bi bi-person-badge"></i>
            <span class="section-name">Addetto</span>
        </a>
        <a href="#" class="sidebar-item" section="Categoria">
            <i class="bi bi-box"></i>
            <span class="section-name">Categorie Merci</span>
        </a>
        <a href="#" class="sidebar-item" section="Passeggero">
            <i class="bi bi-box"></i>
            <span class="section-name">Passeggeri</span>
        </a>

    </div>

    <div class="container">
        <div class="content" id="content">
            <!-- Contenuto caricato -->
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        var viewData = @Html.Raw(Json.Serialize(ViewData));
    </script>
    <script src="~/js/index.js"></script>
</body>
